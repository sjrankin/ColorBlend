<Page x:Class="ColorBlend.BordersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sc="clr-namespace:Iro3.Controls.ColorInput;assembly=SimpleColorInput"
      xmlns:local="clr-namespace:ColorBlend"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BlockSegmentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="Yellow" Offset="0.0"/>
                    <GradientStop Color="Orange" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock FontSize="16"
                       FontWeight="Bold"
                       FontFamily="Segoe UI"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="3">
                Border Options
            </TextBlock>
        </Border>
        <ScrollViewer Grid.Row="1"
                      Background="WhiteSmoke">
            <StackPanel Orientation="Vertical"
                        Margin="3">
                <StackPanel Orientation="Horizontal">
                    <Button Margin="4,2,2,2"
                        Width="75"
                        Height="22"
                        ToolTip="Click to run filter."
                        HorizontalAlignment="Left"
                        Click="ExecuteFilterParamaters">
                        Execute
                    </Button>
                    <Button Margin="4,2,2,2"
                            Width="75"
                            Height="22"
                            ToolTip="Reset image to original"
                            HorizontalAlignment="Left"
                            Click="ResetLocalImage">
                        Image Reset
                    </Button>
                </StackPanel>
                <GroupBox Header="Margins"
                          Margin="4">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="2">
                                    Left border
                            </TextBlock>
                            <TextBox Name="LeftBorderIn"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Width="30"
                                         Margin="5,2,2,2">
                                8
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="2">
                                    Top border
                            </TextBlock>
                            <TextBox Name="TopBorderIn"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Width="30"
                                         Margin="5,2,2,2">
                                8
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="2">
                                    Right border
                            </TextBlock>
                            <TextBox Name="RightBorderIn"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Width="30"
                                         Margin="5,2,2,2">
                                8
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="2">
                                    Bottom border
                            </TextBlock>
                            <TextBox Name="BottomBorderIn"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Width="30"
                                         Margin="5,2,2,2">
                                8
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5,4,0,0">
                            <TextBlock Width="70"
                                       TextWrapping="Wrap">
                                Background color
                            </TextBlock>
                            <sc:SimpleColor Name="BorderBackgroundColor"
                                                Height="25"
                                                CurrentColor="WhiteSmoke"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
